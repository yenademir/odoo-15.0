<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_order_form_inherit_widget" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit.widget.yena</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="(//field[@name='effective_date'])[1]" position="attributes">
                    <attribute name="widget">date</attribute>
                </xpath>
                <xpath expr="(//field[@name='date_approve'])[1]" position="attributes">
                    <attribute name="widget">date</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
