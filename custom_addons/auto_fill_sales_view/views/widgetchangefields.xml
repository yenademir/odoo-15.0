<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_order_form_inherit_widget" model="ir.ui.view">
            <field name="name">sale.order.form.inherit.widget.yena</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="(//field[@name='date_order'])[3]" position="attributes">
                    <attribute name="widget">date</attribute>
                </xpath>
                <xpath expr="(//field[@name='commitment_date'])[2]" position="attributes">
                    <attribute name="widget">date</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
